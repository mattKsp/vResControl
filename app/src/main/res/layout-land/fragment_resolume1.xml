		        android:background="@drawable/ic_bt_blue_nostroke"
		       	android:layout_width="0dp"
		       	android:layout_height="match_parent"
	          	android:layout_weight="1"
				android:layout_margin="2dp"
				android:textStyle="bold"
				android:textColor="@color/vBlack"
		       	android:text="E" />
            <Button
		       	android:id="@+id/bt_jumptopoi_3"
		        android:background="@drawable/ic_bt_blue_nostroke"
		       	android:layout_width="0dp"
		       	android:layout_height="match_parent"
	          	android:layout_weight="1"
				android:layout_margin="2dp"
				android:textStyle="bold"
				android:textColor="@color/vBlack"
		       	android:text="R" />
            <Button
		       	android:id="@+id/bt_jumptopoi_4"
		        android:background="@drawable/ic_bt_blue_nostroke"
		       	android:layout_width="0dp"
		       	android:layout_height="match_parent"
	          	android:layout_weight="1"
				android:layout_margin="2dp"
				android:textStyle="bold"
				android:textColor="@color/vBlack"
		       	android:text="T" />
