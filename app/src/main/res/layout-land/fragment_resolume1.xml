                android:id="@+id/bt_frag1_temp4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bt1_nostroke" />

            <Button
		       	android:id="@+id/bt_jumptopoi_0"
		        android:background="@drawable/ic_bt_blue_nostroke"
		       	android:layout_width="0dp"
		       	android:layout_height="match_parent"
	          	android:layout_weight="1"
				android:layout_margin="2dp"
				android:textStyle="bold"
				android:textColor="@color/vBlack"
		       	android:text="Q" />
            <Button
		       	android:id="@+id/bt_jumptopoi_1"
		        android:background="@drawable/ic_bt_blue_nostroke"
		       	android:layout_width="0dp"
		       	android:layout_height="match_parent"
