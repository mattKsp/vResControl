				android:textStyle="bold"
				android:textColor="@color/vBlack"
			    android:text="L4"/> 
            <Button
		       	android:id="@+id/bt_layer3"
		        android:background="@drawable/shape_bt1_orange"
		       	android:layout_width="0dp"
		       	android:layout_height="match_parent"
	          	android:layout_weight="1"
				android:layout_margin="2dp"
				android:textStyle="bold"
				android:textColor="@color/vBlack"
			    android:text="L3" />
            <Button
                android:id="@+id/bt_layer2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bt1_orange"
