		       	android:id="@+id/bt_jumptopoi_5"
		        android:background="@drawable/ic_bt_blue_nostroke"
		       	android:layout_width="0dp"
		       	android:layout_height="match_parent"
	          	android:layout_weight="1"
				android:layout_margin="2dp"
				android:textStyle="bold"
				android:textColor="@color/vBlack"
		       	android:text="Y" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="8" >

            <Button
                android:id="@+id/bt_beatloop_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bt1_nostroke"
                android:textColor="@color/vBlack"
                android:textStyle="bold"
                android:text="4 bt"/>

            <Button
                android:id="@+id/bt_beatloop_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bt1_nostroke"
                android:textColor="@color/vBlack"
                android:textStyle="bold"
                android:text="2 bt"/>

            <Button
                android:id="@+id/bt_beatloop_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bt1_nostroke"
                android:textColor="@color/vBlack"
                android:textStyle="bold"
                android:text="1 bt" />

            <Button
                android:id="@+id/bt_beatloop_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bt1_nostroke"
                android:textColor="@color/vBlack"
                android:textStyle="bold"
                android:text="1/2 bt" />

            <Button
                android:id="@+id/bt_beatloop_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bt1_nostroke"
                android:textColor="@color/vBlack"
                android:textStyle="bold"
                android:text="1/4 bt" />

            <Button
                android:id="@+id/bt_beatloop_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bt1_nostroke"
                android:textColor="@color/vBlack"
                android:textStyle="bold"
                android:text="1/3 bt" />

            <Button
                android:id="@+id/bt_beatloop_7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bt1_nostroke"
                android:textColor="@color/vBlack"
                android:textStyle="bold"
                android:text="1/6 bt" />

            <Button
                android:id="@+id/bt_frag1_temp5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/shape_bt1_nostroke" />

        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
        	android:weightSum="8" >

			<Button
				android:id="@+id/bt_bypassed"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_margin="2dp"
				android:layout_weight="1"
				android:background="@drawable/ic_bt_orange"
				android:textColor="@color/vBlack"
				android:textStyle="bold"
				android:text="B" />

		    <Button
		        android:id="@+id/bt_disconnectall"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_margin="2dp"
		        android:layout_weight="1"
		        android:background="@drawable/ic_bt_green"
		        android:textColor="@color/vBlack"
		        android:textStyle="bold"
		        android:text="X" />

		    <Button
		        android:id="@+id/bt_paused"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_margin="2dp"
		        android:layout_weight="1"
		        android:background="@drawable/ic_bt_orange"
		        android:textColor="@color/vBlack"
		        android:textStyle="bold"
		        android:text="Paused" />

		    <Button
		        android:id="@+id/bt_resync"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_margin="2dp"
		        android:layout_weight="1"
		        android:background="@drawable/ic_bt_green"
		        android:textColor="@color/vBlack"
		        android:textStyle="bold"
		        android:text="Resync" />

		    <Button
		        android:id="@+id/bt_tap"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_margin="2dp"
		        android:layout_weight="2"
		        android:background="@drawable/ic_bt_green"
		        android:textColor="@color/vBlack"
		        android:textStyle="bold"
		        android:text="Tap" />

		    <Button
		        android:id="@+id/bt_frag1_temp1"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_margin="2dp"
		        android:layout_weight="2"
		        android:background="@drawable/shape_bt1_nostroke" />

        </TableRow>

		<TableRow
		    android:id="@+id/tableRow5"
		    android:layout_width="match_parent"
		    android:layout_height="0dp"
		    android:layout_weight="1"
        	android:stretchColumns="*"
		    android:weightSum="8" >

			<Button
			    android:id="@+id/bt_opacityandvolume_down"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_margin="2dp"
			    android:layout_weight="0.6"
			    android:background="@drawable/ic_bt_left"
			    android:textColor="@color/vBlack"
			    android:textStyle="bold" />

			<SeekBar
			    android:id="@+id/seekBar_opacityandvolume"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:layout_margin="2dp"
			    android:layout_weight="2.8"
			    android:progressDrawable="@drawable/seekbar_progress"
			    android:max="100"
			    android:paddingLeft="6dp"
			    android:paddingRight="6dp"
			    android:progress="100"
			    android:secondaryProgress="0" />

			<Button
			    android:id="@+id/bt_opacityandvolume_up"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_margin="2dp"
			    android:layout_weight="0.6"
			    android:background="@drawable/ic_bt_right" />

			<EditText
			    android:id="@+id/editText_bpm"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_margin="2dp"
			    android:layout_weight="2"
			    android:background="@drawable/shape_bt1_nostroke"
			    android:ems="10"
			    android:hint="120.00"
			    android:imeOptions="actionDone"
			    android:inputType="numberDecimal"
			    android:maxLength="6"
			    android:paddingLeft="24dp"
			    android:selectAllOnFocus="true"
			    android:singleLine="true"
			    android:textColor="@color/vSandy1Trans" />

		    <Button
		        android:id="@+id/bt_frag1_temp3"
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_margin="2dp"
		        android:layout_weight="2"
		        android:background="@drawable/shape_bt1_nostroke" />

		</TableRow>
        		    
		    <EditText
			    android:id="@+id/hiddenForFocus1"
			    android:layout_width="0px"
			    android:layout_height="0px" />
  
