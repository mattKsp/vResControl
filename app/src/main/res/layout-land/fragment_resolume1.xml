            <Button
		       	android:id="@+id/bt_comp_dir0"
		        android:background="@drawable/ic_bt_green_nostroke"
		       	android:layout_width="0dp"
		       	android:layout_height="match_parent"
	          	android:layout_weight="1"
				android:layout_margin="2dp"
				android:textStyle="bold"
				android:textColor="@color/vBlack"
		       	android:text="{" />
            <Button
		       	android:id="@+id/bt_comp_dir1"
		        android:background="@drawable/ic_bt_green_nostroke"
		       	android:layout_width="0dp"
		       	android:layout_height="match_parent"
	          	android:layout_weight="1"
				android:layout_margin="2dp"
				android:textStyle="bold"
				android:textColor="@color/vBlack"
		       	android:text="}" />
            <Button
		       	android:id="@+id/bt_comp_dir2"
		        android:background="@drawable/ic_bt_orange_nostroke"
		       	android:layout_width="0dp"
		       	android:layout_height="match_parent"
	          	android:layout_weight="1"
				android:layout_margin="2dp"
				android:textStyle="bold"
				android:textColor="@color/vBlack"
